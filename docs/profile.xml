<?xml version="1.0" encoding="UTF-8"?>
<alps
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="https://alps-io.github.io/schemas/alps.xsd">
    <title>MaAlps</title>
    <version>1.0</version>
    <link href="https://github.com/ma-alps/spec" rel="#repository"/>
    <link href="https://github.com/ma-alps/spec" rel="about"/>

    <!-- ontology -->
    <descriptor id="id" def="https://schema.org/identifier"/>
    <descriptor id="repository" title="Repository URL (custom relation)"/>
    <descriptor id="mediaType" title="Media type"/>
    <descriptor id="isPublic" title="Publication flag of profile"/>
    <descriptor id="profileUrl" title="URL of profile"/>
    <descriptor id="asdUrl" title="URL of published asd"/>
    <descriptor id="profileFile" title="Profile raw data"/>
    <descriptor id="title" title="Title of profile"/>
    <descriptor id="StateDiagram"/>

    <!-- taxonomy -->
    <descriptor id="MyAlps">
        <descriptor href="#AlpsItem"/>
        <descriptor href="#doCreate"/>
        <descriptor href="#goAlpsItemEdit"/>
        <descriptor href="#goAlpsItem"/>
        <descriptor href="#goIndex"/>
        <descriptor href="#User"/>
    </descriptor>
    <descriptor id="Index">
        <descriptor href="#PublicAlps"/>
        <descriptor href="#AlpsItem"/>
        <descriptor href="#goMyAlps"/>
        <descriptor href="#doCreateStateDiagram"/>
        <descriptor href="#goAlpsItem"/>
    </descriptor>
    <descriptor id="AlpsItem">
        <descriptor href="#id"/>
        <descriptor href="#isPublic"/>
        <descriptor href="#profileUrl"/>
        <descriptor href="#goIndex"/>
        <descriptor href="#title"/>
        <descriptor href="#User"/>
        <descriptor href="#goUser"/>
        <descriptor href="#goMyAlps"/>
        <descriptor href="#mediaType"/>
        <descriptor href="#asdUrl"/>
        <descriptor href="#goAlpsItemEdit"/>
        <descriptor href="#doDelete"/>
    </descriptor>
    <descriptor id="AlpsList" rel="collection">
        <descriptor href="#AlpsItem"/>
    </descriptor>
    <descriptor id="AlpsItemEdit">
        <descriptor href="#AlpsItem"/>
        <descriptor href="#doEdit"/>
    </descriptor>
    <descriptor id="PublicAlps">
        <descriptor href="#AlpsItem"/>
    </descriptor>
    <descriptor id="User" def="https://schema.org/Person" title="User">
        <descriptor href="#id" />
        <descriptor href="#goAlpsItem" />
    </descriptor>

    <!-- choreography -->
    <descriptor id="goMyAlps" type="safe" rt="#MyAlps">
        <descriptor href="#id" title="userId" />
    </descriptor>
    <descriptor id="goIndex" type="safe" rt="#Index" rel="collection"/>
    <descriptor id="goAlpsItemEdit" type="safe" rt="#AlpsItemEdit" rel="edit-form">
        <descriptor href="#id"/>
    </descriptor>
    <descriptor id="goAlpsItem" type="safe" rt="#AlpsItem" rel="item">
        <descriptor href="#id"/>
    </descriptor>
    <descriptor id="goUser" type="safe" rt="#User">
        <descriptor href="#id"/>
    </descriptor>
    <descriptor id="doEdit" type="idempotent" rt="#AlpsItem" rel="edit">
        <descriptor href="#AlpsItem"/>
    </descriptor>
    <descriptor id="doCreateStateDiagram" type="idempotent" rt="#StateDiagram">
        <descriptor href="#profileFile"/>
    </descriptor>
    <descriptor id="doCreate" type="unsafe" rt="#AlpsItem">
        <descriptor href="#MyAlps"/>
    </descriptor>
    <descriptor id="doDelete" type="idempotent" rt="#MyAlps">
        <descriptor href="#id" />
    </descriptor>
</alps>
